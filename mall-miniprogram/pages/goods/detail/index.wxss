.container {
  padding-bottom: 100rpx;
}

.goods-image {
  width: 100%;
  height: 750rpx;
  background: #f7f7f7;
}

.goods-image image {
  width: 100%;
  height: 100%;
}

.goods-info {
  padding: 30rpx;
  background: #fff;
}

.goods-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.goods-price {
  display: flex;
  align-items: baseline;
}

.symbol {
  font-size: 24rpx;
  color: #E93B3D;
}

.price {
  font-size: 36rpx;
  color: #E93B3D;
  font-weight: bold;
}

.goods-detail {
  margin-top: 20rpx;
  padding: 30rpx;
  background: #fff;
}

.goods-detail .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
}

.cart-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 30rpx;
}

.cart-btn text {
  font-size: 20rpx;
  color: #999;
  margin-top: 4rpx;
}

.action-btn {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  border-radius: 36rpx;
  margin-left: 20rpx;
}

.add-cart {
  background: #FFB03F;
}

.buy {
  background: #E93B3D;
}

.original-price {
  color: #999;
  font-size: 28rpx;
  text-decoration: line-through;
}

.name-section {
  margin-bottom: 20rpx;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1.4;
}

.brief {
  font-size: 28rpx;
  color: #666;
  line-height: 1.4;
}

.detail-section {
  background: #fff;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #E93B3D;
}

.rich-text-wrapper {
  padding: 20rpx 0;
}

.rich-text-wrapper image {
  max-width: 100% !important;
  height: auto !important;
} 