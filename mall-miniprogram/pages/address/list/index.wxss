.container {
  min-height: 100vh;
  background: #f7f7f7;
  padding-bottom: 120rpx;
}

.address-list {
  padding: 20rpx;
}

.address-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.address-content {
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}

.user-info {
  margin-bottom: 16rpx;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.phone {
  color: #666;
}

.default-tag {
  font-size: 24rpx;
  color: #fff;
  background: #E93B3D;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-left: 20rpx;
}

.address-detail {
  color: #333;
  font-size: 28rpx;
  line-height: 1.5;
}

.address-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.action-item {
  margin-left: 30rpx;
}

.action-text {
  font-size: 28rpx;
  color: #666;
}

.empty-address {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  color: #cccccc;
}

.empty-address text {
  font-size: 28rpx;
  color: #999;
}

.add-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: #E93B3D;
  color: #fff;
  font-size: 32rpx;
} 