.container {
  min-height: 100vh;
  background: #f7f7f7;
  padding-bottom: 120rpx;
}

.form {
  background: #fff;
  padding: 0 30rpx;
  margin-top: 20rpx;
}

.form-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.input {
  height: 60rpx;
  font-size: 28rpx;
}

.textarea {
  width: 100%;
  height: 160rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.picker {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
}

.picker.placeholder {
  color: #999;
}

.switch-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
}

.switch-item .label {
  margin-bottom: 0;
}

.save-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: #E93B3D;
  color: #fff;
  font-size: 32rpx;
} 