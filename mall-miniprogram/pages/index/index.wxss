/* 搜索栏 */
.search-bar {
  padding: 20rpx;
  background: #fff;
}

.search-bar input {
  height: 60rpx;
  background: var(--bg-color);
  border-radius: 30rpx;
  padding: 0 30rpx;
  font-size: 26rpx;
}

/* 轮播图 */
.banner {
  height: 300rpx;
  margin-bottom: 20rpx;
}

.banner image {
  width: 100%;
  height: 100%;
}

/* 推荐商品 */
.recommend {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.recommend-list {
  white-space: nowrap;
}

.recommend-item {
  display: inline-block;
  width: 240rpx;
  margin-right: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.recommend-item image {
  width: 240rpx;
  height: 240rpx;
  border-radius: 12rpx;
}

.recommend-item .goods-info {
  padding: 12rpx;
  white-space: normal;
}

.recommend-item .goods-name {
  font-size: 26rpx;
}

.recommend-item .cart-btn {
  width: 48rpx;
  height: 48rpx;
}

/* 分类商品 */
.category-section {
  background: #fff;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
}

.category-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
}

.category-title {
  font-size: 32rpx;
  font-weight: bold;
}

.more-link {
  color: #999;
  font-size: 24rpx;
}

.more-link .arrow {
  margin-left: 4rpx;
}

.category-goods {
  display: flex;
  flex-wrap: wrap;
  padding: 0 10rpx;
}

.goods-item {
  width: calc(50% - 20rpx);
  margin: 10rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.goods-item image {
  width: 100%;
  height: 300rpx;
}

.goods-info {
  padding: 16rpx;
}

.goods-name {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.price-cart {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.goods-price {
  color: #E93B3D;
  font-size: 32rpx;
  font-weight: bold;
}

.cart-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cart-btn image {
  width: 100%;
  height: 100%;
} 